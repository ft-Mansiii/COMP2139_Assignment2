@model List<Product>

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />




<h1>Search Products</h1>

<form id="SearchForm">
    <div class="form-group">
        <label for="query">Search by Name:</label>
        <input type="text" name="query" class="form-control" id="Name"/>
    </div>

    <div class="form-group">
        <label for="categoryId">Category:</label>
        <select name="categoryId" class="form-control" id="categorySelect">
            <option value="">All Categories</option>
            @if (ViewBag.Categories != null)
            {
                @foreach (var category in ViewBag.Categories as List<Category>)
                {
                    <option value="@category.CategoryId">@category.CategoryName</option>
                }
            }
            else
            {
                <option disabled>No categories available</option>
            }
        </select>

    </div>

    <div class="form-group">
        <label for="minPrice">Min Price:</label>
        <input type="number" name="minPrice" class="form-control" step="0.01" id="minPriceSelect"/>
    </div>

    <div class="form-group">
        <label for="maxPrice">Max Price:</label>
        <input type="number" name="maxPrice" class="form-control" step="0.01" id="maxPriceSelect"/>
    </div>

<div class="form-group">
    <label for="lowStock">Low Stock Only:</label>
    <input type="checkbox" name="lowStock" class="form-check-input" id="lowStockSelect"/>
</div>

    <button  type="submit" class="btn btn-primary">Search</button>
</form>


<div id="loader" style="display: none;">
    <i class="fas fa-spinner fa-spin"></i> Loading...
</div>

<h2>Results</h2>
    <div id="productResults"></div>
   

@section Scripts {

    <script src="~/js/productManagement.js"></script>
}
