@model Assignment01.Models.Category

@{
    ViewData["Title"] = "Category Details";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>Category</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Category Name</dt>
        <dd class="col-sm-10">@Model.CategoryName</dd>

        <dt class="col-sm-2">Category Description</dt>
        <dd class="col-sm-10">@Model.CategoryDescription</dd>
    </dl>

    <a href="@Url.Action("Edit", new { id = Model.CategoryId })" class="btn btn-warning">Edit</a>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Back to List</a>
</div>

